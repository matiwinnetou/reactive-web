# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET        /mock/:serviceName/:vehicleId        controllers.Mock.mock(serviceName: String, vehicleId: Int)

GET        /                                    controllers.Assets.at(path="/public", file="index.html")

GET        /usecase0                            controllers.UseCase0.index()

GET        /usecase1a                           controllers.UseCase1.index_a()
GET        /usecase1b                           controllers.UseCase1.index_b()

GET        /usecase2a                           controllers.UseCase2.index_a()
GET        /usecase2b                           controllers.UseCase2.index_b()

GET        /usecase3                            controllers.UseCase3.index()

GET        /usecase4                            controllers.UseCase4.index()

GET        /usecase5a                            controllers.UseCase5.index_a()
GET        /usecase5b                            controllers.UseCase5.index_b()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                        controllers.Assets.at(path="/public", file)
